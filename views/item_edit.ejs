<%- include('./layouts/header_1') %> 

<%- include('./layouts/nav_edit') %>

		<form action="/item/modosit/<%= item._id  %> " method="post" autocomplete="off">
            <table>
                <tr>
                    <td>
                        <label for="nev">Név:</label>
                    </td>
                    <td>
                        <input type="text" name="nev" id="nev" value="<%= item.nev %>" autofocus />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="kategoria">Kategória:</label>
                    </td>
                    <td>
                        <select name="kategoria" id="kategoria">
                            <option><%= item.kategoria %></option>
                            <% categories.forEach(category => { %>
                                <% if (category.nev != item.kategoria) { %>
                                    <option value="<%= category.nev %>">
                                        <%= category.nev %>
                                    </option>
                                <% } %>
                            <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="egyseg">Egység:</label>
                    </td>
                    <td>
                        <select name="egyseg" id="egyseg">
                            <option><%= item.egyseg %></option>
                            <% units.forEach(unit => { %>
                                <% if (unit.nev != item.egyseg) { %>
                                    <option value="<%= unit.nev %>">
                                        <%= unit.nev %>
                                    </option>
                                <% } %>
                            <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="ar">Egységár:</label>
                    </td>
                    <td>
                        <input type="number" name="ar" id="ar" value="<%= item.ar %>" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit">Elküld</button>
                    </td>
                </tr>
            </table>
        </form>
    </body>
</html>