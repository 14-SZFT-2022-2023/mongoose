<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/stilus.css" />
        <style>
            table {
                margin: 50px auto;
                width: 20%;
            }

            td {
                border: none;
            }
        </style>
        <title>Árúcikk</title>
    </head>
    <body>
        <div id="container">
            <h1>Ez egy bevásárló oldal</h1>
            <p>Minden, mi szem szájnak ingere!</p>
        </div>
        <nav>
            <li>
                <a href="/">Nyitó</a>
            </li>
            <li>
                <a href="/buyer">Vásárló</a>
            </li>
            <li>
                <a href="/buyers">Vásárlók</a>
            </li>
            <li>
                <a href="/category">Kategória</a>
            </li>
            <li>
                <a href="/categories">Kategóriák</a>
            </li>
            <li>
                <a href="/item" class="active">Árucikk</a>
            </li>
            <li>
                <a href="/items">Árucikkek</a>
            </li>
            <li>
                <a href="/buying">Vásárlás</a>
            </li>
        </nav>
        <form action="/item" method="post" autocomplete="off">
            <table>
                <tr>
                    <td>
                        <label for="nev">Név:</label>
                    </td>
                    <td>
                        <input type="text" name="nev" id="nev" autofocus />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="kategoria">Kategória:</label>
                    </td>
                    <td>
                        <select name="kategoria" id="kategoria">
                            <option></option>
                            <% categories.forEach(category => { %>
                            <option value="<%= category.nev %> ">
                                <%= category.nev %>
                            </option>
                            <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="egyseg">Egység:</label>
                    </td>
                    <td>
                        <select name="egyseg" id="egyseg">
                            <option></option>
                            <option value="kg">kilogram</option>
                            <option value="liter">liter</option>
                            <option value="db">darab</option>
                            <option value="csomag">csomag</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="ar">Egységár:</label>
                    </td>
                    <td>
                        <input type="number" name="ar" id="ar" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit">Elküld</button>
                    </td>
                </tr>
            </table>
        </form>
    </body>
</html>
