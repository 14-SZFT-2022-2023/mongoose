<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/stilus.css" />
        <style>
            table {
                margin: 50px auto;
                width: 50%;
            }

            th {
                text-align: left;
            }

            td {
                border: none;
            }
        </style>
        <title>Vásárlók</title>
    </head>
    <body>
        <div id="container">
            <h1>Ez egy bevásárló oldal</h1>
            <p>Minden, mi szem szájnak ingere!</p>
        </div>
        <nav>
            <li>
                <a href="/">Nyitó</a>
            </li>
            <li>
                <a href="/buyer">Vásárló</a>
            </li>
            <li>
                <a href="/buyers" class="active">Vásárlók</a>
            </li>
            <li>
                <a href="/category">Kategória</a>
            </li>
            <li>
                <a href="/categories">Kategóriák</a>
            </li>
            <li>
                <a href="/item">Árucikk</a>
            </li>
            <li>
                <a href="/items">Árucikkek</a>
            </li>
            <li>
                <a href="/buying">Vásárlás</a>
            </li>
        </nav>
        <table>
            <tr>
                <th>Vásárló neve</th>
                <th>Címe</th>
                <th>Törlés</th>
                <th>Módosítás</th>
            </tr>
            <% buyers.forEach(buyer => { %>
            <tr>
                <td><%= buyer.nev %></td>
                <td>
                    <%= buyer.cim.varos %>, <%= buyer.cim.iranyitoszam %> <%=
                    buyer.cim.utca %> <%= buyer.cim.hazszam %>
                </td>
                <td><input type="checkbox" name="torol" /></td>
                <td><input type="checkbox" name="modosit" /></td>
            </tr>
            <% }) %>
        </table>
    </body>
</html>
